        </plugins>
    </build>
    
    <dependencies>
        <dependency>
            <groupId>com.fizzed</groupId>
            <artifactId>blaze-core</artifactId>
        </dependency>
        
        <dependency>
            <groupId>com.fizzed</groupId>
            <artifactId>blaze-ivy</artifactId>
        </dependency>
                
